<section id="gallery">
    <h2>
        Portofoliu
    </h2>

    <div class="portofolio-container">
        <% 
        let ora = new Date().getHours();
        let imagini_afisate = 0;
        
        // Verificăm corectitudinea datelor primite
        if (locals.imagini && Array.isArray(locals.imagini)) {
            for (let imag of locals.imagini) { 
                // Verificăm dacă imaginea trebuie afișată în funcție de ora curentă
                let se_afiseaza = false;
                if (imag.intervale_ore && Array.isArray(imag.intervale_ore)) {
                    for (let interval of imag.intervale_ore) {
                        if (ora >= interval[0] && ora <= interval[1]) {
                            se_afiseaza = true;
                            break;
                        }
                    }
                }
                
                if (se_afiseaza) { 
                    imagini_afisate++;
                    // Verificăm ce proprietăți sunt disponibile
                    let sursa_imagine = "";
                    let sursa_imagine_mediu = "";
                    
                    if (imag.fisier) {
                        sursa_imagine = imag.fisier;
                        sursa_imagine_mediu = imag.fisier_mediu || sursa_imagine;
                    } else if (imag.cale_relativa) {
                        sursa_imagine = imag.cale_relativa.startsWith('/') ? 
                            imag.cale_relativa : 
                            '/resurse/imagini/galerie/' + imag.cale_relativa;
                        
                        let numeFisier = imag.cale_relativa.split('.')[0];
                        sursa_imagine_mediu = '/resurse/imagini/galerie/mediu/' + numeFisier + '.webp';
                    }
                    
                    if (sursa_imagine) {
                %>
                <div class="portofolio-item">
                    <picture>
                        <source srcset="<%= sursa_imagine_mediu %>" media="screen and (max-width:1000px)" />
                        <img src="<%= sursa_imagine %>" 
                            alt="<%= imag.alternativ || imag.nume_imag || 'Imagine portofoliu' %>"
                            title="<%= imag.descriere_imag || imag.nume_imag || 'Imagine portofoliu' %>">
                    </picture>
                    <div class="portofolio-caption">
                        <%= imag.nume_imag || 'Imagine' %> #<%= imagini_afisate %>
                    </div>
                </div>
                <% } 
                }
            } 
        } %>
        
        <!-- Dacă nu avem imagini afișate, arătăm un mesaj -->
        <% if (imagini_afisate === 0) { %>
            <div class="no-images-message">
                Nu există imagini disponibile pentru afișare în acest moment.
            </div>
        <% } %>
    </div>
</section>

